<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baomidou.mybatis3.mapper.ExampleMapper">
    <resultMap id="BaseResultMap"
               type="com.baomidou.mybatis3.domain.Blog">
        <result column="id" property="id"/>
        <result column="age" property="age"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="title" property="title"/>
        <result column="money" property="money"/>
        <result column="blob_text" property="blobText"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,age,content,title,money
    </sql>

    <update id="updateIdAndContentByAllFields">
        update t_blog
        set id      = #{id,jdbcType=NUMERIC},
            content = #{content,jdbcType=VARCHAR}
        where
            AND id = #{id,jdbcType=NUMERIC}
            AND title = #{title,jdbcType=VARCHAR}
            AND content = #{content,jdbcType=VARCHAR}
    </update>
    <resultMap id="BlogIdTitleMap" type="com.baomidou.mybatis3.domain.BlogIdTitleDTO">
        <result column="id" property="id" jdbcType="NUMERIC"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="selectIdAndTitleById" resultMap="BlogIdTitleMap">
        select id, title
        from t_blog
        <where>
            <if test="id != null">
                id = #{id,jdbcType=NUMERIC}
            </if>
        </where>
    </select>
    <resultMap id="BlogAgeContentMap" type="com.baomidou.mybatis3.domain.BlogAgeContentDTO">
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="NUMERIC"/>
    </resultMap>
    <select id="selectAgeAndContentById" resultMap="BlogAgeContentMap">
        select age, content
        from t_blog
        <where>
            <if test="id != null">
                id = #{id,jdbcType=NUMERIC}
            </if>
        </where>
    </select>
    <insert id="insertAll">
        insert into t_blog
        (id,
         title,
         content,
         money,
         age,
         create_time,
         blob_text,
         objects,
         ids)
        values ( #{id,jdbcType=NUMERIC},
                #{title,jdbcType=VARCHAR},
                #{content,jdbcType=VARCHAR},
                #{money,jdbcType=DECIMAL},
                #{age,jdbcType=NUMERIC},
                NOW(),





                #{blobText},
                #{objects},





                #{ids})

    </insert>

    <resultMap id="BlogTitleContentMap" type="com.baomidou.mybatis3.domain.BlogTitleContentDTO">
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR" />
        <association property="childOther">
            <result column="title" property="title" jdbcType="VARCHAR"/>
            <result column="content" property="content" jdbcType="VARCHAR"/>
        </association>
        <collection property="childList" javaType="com.baomidou.mybatis3.domain.BlogTitleContentDTOChild">
            <result column="title" property="title" jdbcType="VARCHAR"/>
            <result column="content" property="content" jdbcType="VARCHAR" typeHandler="org.apache.ibatis.type.StringTypeHandler" />
        </collection>
    </resultMap>
    <select id="selectTitleAndContentByTitle" resultMap="BlogTitleContentMap">
        select title, content
        from t_blog
        <where>
            <if test="title != null and title != ''">
                title = #{title,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
    <select id="selectTitleAndContentById" resultMap="BlogTitleContentMap">
select * from blog where id = #{id}
        select title, content
        from t_blog
        <where>
            <if test="id != null">
                id = #{id,jdbcType=NUMERIC}
            </if>
        </where>
    </select>
    <select id="selectOneById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where
        id = #{id,jdbcType=VARCHAR}
    </select>
    <select id="selectByTitle" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where
        title = #{title,jdbcType=BLOB}
    </select>
    <select id="selectCreateTimeByAge" resultMap="BaseResultMap">
    select create_time
    from t_blog
    where
    age = #{blog.age,jdbcType=VARCHAR}
    </select>


</mapper>
